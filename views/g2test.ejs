<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

    <body>
        <%- include('layouts/navbar'); -%>
            <main id="wrapper">
                <div class="container-fluid justify-content-center">
                    <h3>G2 Test</h3>
                    <form id="g2test" action="/g2" method="POST">
                        <section>Personal Details</section>
                        <div class="row">
                            <div class="row">
                                <div class="col label">
                                    <label for="firstName">First Name</label>
                                </div>
                                <div class="col">
                                    <input type="text" id="firstName" name="firstName" class="form-control"
                                        placeholder="First Name">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col label">
                                    <label for="lastName">Last Name</label>
                                </div>
                                <div class="col">
                                    <input type="text" id="lastName" name="lastName" class="form-control"
                                        placeholder="Last Name">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col label">
                                    <label for="licenseNumber">License Number</label>
                                </div>
                                <div class="col">
                                    <input type="text" id="licenseNumber" name="licenseNumber" class="form-control"
                                        placeholder="License Number">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col label">
                                    <label for="age">Age</label>
                                </div>
                                <div class="col">
                                    <input type="number" name="age" id="age" class="form-control" placeholder="Age">
                                </div>
                            </div>
                        </div>
                        <section>Car Details</section>
                        <div class="row">
                            <div class="row">
                                <div class="col label">
                                    <label for="makeCar">Make</label>
                                </div>
                                <div class="col">
                                    <input type="text" id="makeCar" name="make" class="form-control" placeholder="Make">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col label">
                                    <label for="modelCar">Model</label>
                                </div>
                                <div class="col">
                                    <input type="text" id="modelCar" name="model" class="form-control"
                                        placeholder="Model">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col label">
                                    <label for="yearCar">Year</label>
                                </div>
                                <div class="col">
                                    <input type="number" id="yearCar" name="year" class="form-control"
                                        placeholder="Year">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col label">
                                    <label for="platNumber">Plat Number</label>
                                </div>
                                <div class="col">
                                    <input type="text" id="platNumber" name="platNumber" class="form-control"
                                        placeholder="Plat Number">
                                </div>
                            </div>
                        </div>
                        <section>Book Appointment</section>
                        <div class="row">
                            <div class="col label">
                                <label for="appointmentDate">Appointment Date</label>
                            </div>
                            <div class="col">
                                <input type="date" id="appointmentDate" name="appointmentDate"
                                    onchange="fetchAvailableSlots()" class="form-control"
                                    placeholder="Appointment Date">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col label">
                                <label for="appointmentTime">Appointment Time</label>
                            </div>
                            <div class="col">
                                <select name="appointmentTime" id="appointmentTime" class="col-lg-6">
                                    <option value="9:00AM">9:00AM</option>
                                    <option value="9:30AM">9:30AM</option>
                                    <option value="10:00AM">10:00AM</option>
                                    <option value="10:30AM">10:30AM</option>
                                    <option value="11:00AM">11:00AM</option>
                                    <option value="11:30AM">11:30AM</option>
                                    <option value="12:00PM">12:00PM</option>
                                    <option value="12:30PM">12:30PM</option>
                                    <option value="1:00PM">1:00PM</option>
                                    <option value="1:30PM">1:30PM</option>
                                    <option value="2:00PM">2:00PM</option>
                                    <option value="2:30PM">2:30PM</option>
                                    <option value="3:00PM">3:00PM</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <button type="submit" id="submit" value="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </main>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous">
                </script>

    </body>

</html>