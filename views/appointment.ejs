<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

    <body>
        <%- include('layouts/navbar'); -%>
            <main>
                <div id="wrapper">
                    <div class="appointment_view">
                        <h2>Appointment View</h2>
                        <form action="/appointmentDates" method="post">
                            <div class="form-group row">
                                <label for="appointmentDate" class="col-lg-6 col-form-label">Appointment Date
                                </label>
                                <input type="date" name="appointmentDate" id="AppointmentDate" class="col-lg-6">
                                <label for="appointmentTime" class="col-lg-6 col-form-label">Appointment Time
                                </label>
                                <select name="appointmentTime" id="appointmentTime" class="col-lg-6">
                                    <option value="9:00AM">9:00AM</option>
                                    <option value="9:30AM">9:30AM</option>
                                    <option value="10:00AM">10:00AM</option>
                                    <option value="10:30AM">10:30AM</option>
                                    <option value="11:00AM">11:00AM</option>
                                    <option value="11:30AM">11:30AM</option>
                                    <option value="12:00PM">12:00PM</option>
                                    <option value="12:30PM">12:30PM</option>
                                    <option value="1:00PM">1:00PM</option>
                                    <option value="1:30PM">1:30PM</option>
                                    <option value="2:00PM">2:00PM</option>
                                    <option value="2:30PM">2:30PM</option>
                                    <option value="3:00PM">3:00PM</option>
                                </select>
                            </div>
                            <br>
                            <input type="submit" value="Add Slot" class="btn btn-primary">
                        </form>
                    </div>
                </div>
            </main>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
            
    </body>

</html>